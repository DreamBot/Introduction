<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
		"-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
		"http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
		
<tiles-definitions>
	<definition name="baseLayout" template="/WEB-INF/jsp/templates/screen_layout.jsp">
		<put-attribute name="title" value="spring.webproject.title"/>
		<put-attribute name="header" value="/WEB-INF/jsp/templates/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/jsp/templates/footer.jsp" />
		<put-attribute name="body" value="" />
	</definition>
	
	<definition name="loginView" extends="baseLayout">
		<put-attribute name="body" value="/WEB-INF/jsp/loginBody.jsp" />
	</definition>
	
	<definition name="homeView" extends="baseLayout">
		<put-attribute name="body" value="/WEB-INF/jsp/homeBody.jsp" />
	</definition>
</tiles-definitions>